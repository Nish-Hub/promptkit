  "required": [
    "task"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "task": {
      "type": "string"
    },
    "context": {
      "type": "string"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "outputFormat": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
